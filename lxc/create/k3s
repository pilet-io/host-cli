#!/bin/bash

#> [name]=some [profile]=md

with lxc create vm --name $NAME --profile $PROFILE
if [ $? -ne 0 ]; then
  echo "Failed creating container $NAME"
  exit 1
fi

cat <<EOF | lxc shell $NAME
git clone https://github.com/pilet-io/vm-cli.git
mv /root/vm-cli /root/cli
echo "export PATH=\$PATH:/root/cli" >> /root/.profile
/root/cli/with k3s create cluster
EOF

echo "Kubernetes master $NAME is created"

IPV4=$(store_get_vm_addr4 $NAME)
dns_create_record CNAME $NAME pilet.site $SYS_HOSTNAME

cat <<EOF > /root/.config/services/${NAME}.yaml
http:
  routers:
    route-$NAME:
      rule: "Host(\`${NAME}.pilet.site\`)"
      tls:
        certResolver: resolver0
        domains:
          - main: "*.pilet.site"
      service: service-$NAME
      priority: 1000
      entryPoints:
        - https

  services:
    service-$NAME:
      loadBalancer:
        servers:
          - url: "http://${IPV4}:80"
EOF

