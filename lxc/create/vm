#!/bin/bash

#> [name]=some [org]=? [profile]=md

VMNAME="$NAME-$ORG"

lxc config show $VMNAME > /dev/null 2>&1
if [ $? -eq 0 ]; then
  echo "Container $VMNAME already exists"
  exit 1
fi

OPTIONS="--profile base"
for profile in ${PROFILE/,/ }; do
  OPTIONS="$OPTIONS --profile $profile"
done

lxc init ubuntu:24.04 $VMNAME --vm $OPTIONS < <(echo "")
lxc start $VMNAME

while true; do
  sleep 2s
  IPV6=$(lxc exec $VMNAME ip addr 2>/dev/null | grep 2a01 | awk '{print $2}')
  IPV4=$(lxc exec $VMNAME ip addr 2>/dev/null | grep 'inet 192' | awk '{print $2}')
  echo -n "."
  IPV6=${IPV6/\/64/}
  IPV4=${IPV4/\/24/}
  if [ ! -z "$IPV6" ]; then
    echo ""
    echo "IPs are $IPV4, $IPV6"
    store_save_vm $VMNAME $PROFILE $VMNAME.pilet.site $IPV4 $IPV6 > /dev/null
    echo "#> host=$(hostname)"
    echo "#> vm=$NAME"
    echo "#> name=$VMNAME"
    echo "#> profile=$PROFILE"
    echo "#> dns=$VMNAME.pilet.site"
    echo "#> ip4=$IPV4"
    echo "#> ip6=$IPV6"
    echo ""
    break
  fi
done

while true; do
  DONE=$(lxc exec $VMNAME -- cat /root/.done 2>/dev/null)
  if [[ "$DONE" == "done" ]]; then
    echo "Done"
    break
  fi
  echo -n "."
  sleep 2s
done