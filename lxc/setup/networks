#!/bin/bash

#>

IP6=$(ip addr | grep 2a01: | grep /128 | awk '{print $2}')
IP6="${IP6/\/128/\/64}"

echo "ip6 : ${IP6}"
lxc network create br0 --type bridge
cat <<EOF | lxc network edit br0
name: br0
description: "Br0 default"
config:
  ipv4.address: 172.16.1.1/16
  ipv4.nat: "true"
  ipv6.address: ${IP6}/64
  ipv6.nat: "true"
EOF